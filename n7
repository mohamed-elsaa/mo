import java.util.Scanner;

public class n7 {
    public static void main (String[]args) {


    //Question 5
    Scanner console =new Scanner(System.in);
        System.out.print("Enter the coefficient a: ");
                double a= console.nextDouble();
                System.out.print("Enter the coefficient b: ");
                double b= console.nextDouble();
                System.out.print("Enter the coefficient c: ");
                double c= console.nextDouble();
                System.out.println("The form of the equation: "+a+"x^2+"+b+"x+ "+c+"=0");
                double discriminant>;0) {
                System.out.println("Roots are real and different");
                double root1 = (-b + Math.sqrt(discriminant)) / (2 * a);
                double root2 = (-b + Math.sqrt(discriminant)) / (2 * a);
                System.out.println(("The first root of the equation= " + root1));
                System.out.println(("The second root of the equation= " + root2));
                }else{
                System.out.println("Roots are complex and different");
                double realpart=(-b)/(2*a);
                double imaginarypart=Math.sqrt(Math.abs(discriminant))/(2*a);
                System.out.println("The root1 of the equation= "+realpart+"+imaginarypart+"1");
                System.out.println("The root2 of the equation= "+realpart+"+imaginarypart+"1");
            }
       }
