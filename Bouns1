public class bounse1 {
    public static void main(String[] args) {
        scale(2.5, 2);

    }
    public static void scale(double x, int n) {
        for (int i = 1; i <= Math.abs(n); i++) {
            if (n<0) {
                x = x * .1;
            }else if (n>0){
                x = x * 10;
            }
        }
        System.out.println(x);
    }
}


